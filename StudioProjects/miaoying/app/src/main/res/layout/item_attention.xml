<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_size140"
        android:background="@color/commonWhite"
        android:orientation="horizontal">

        <com.yidan.xiaoaimei.ui.view.RoundAngleImageView
            android:id="@+id/iv_item_head"
            android:layout_width="@dimen/layout_size100"
            android:layout_height="@dimen/layout_size100"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/layout_size30" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_size20"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_size15"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="名字"
                    android:textColor="@color/color333"
                    android:textSize="@dimen/text28" />

                <TextView
                    android:id="@+id/tv_item_verify"
                    android:layout_width="@dimen/layout_size64"
                    android:layout_height="@dimen/layout_size32"
                    android:layout_marginLeft="@dimen/layout_size10"
                    android:background="@drawable/bg_verify"
                    android:gravity="center"
                    android:text="认证"
                    android:textColor="@color/commonWhite"
                    android:textSize="@dimen/text22" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_item_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="22222233442222223344"
                android:textColor="@color/color999"
                android:textSize="@dimen/text22" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/layout_size10"
                android:layout_marginTop="@dimen/layout_size10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_item_get"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/layout_size32"
                    android:background="@drawable/bg_mine_money_get"
                    android:drawableLeft="@mipmap/icon_money_get"
                    android:drawablePadding="@dimen/layout_size10"
                    android:gravity="center"
                    android:paddingRight="@dimen/layout_size10"
                    android:text=""
                    android:textColor="@color/mine_money_get"
                    android:textSize="@dimen/text20" />

                <TextView
                    android:id="@+id/tv_item_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/layout_size32"
                    android:layout_marginLeft="@dimen/layout_size20"
                    android:background="@drawable/bg_mine_money_pay"
                    android:drawableLeft="@mipmap/icon_money_pay"
                    android:drawablePadding="@dimen/layout_size10"
                    android:gravity="center"
                    android:paddingRight="@dimen/layout_size10"
                    android:text=""
                    android:textColor="@color/mine_money_pay"
                    android:textSize="@dimen/text20" />


            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_item_attention"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/layout_size30"
            android:drawablePadding="3dp"
            android:drawableTop="@mipmap/icon_attention"
            android:text="关注"
            android:textColor="@color/color9A"
            android:textSize="@dimen/text22"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/layout_size30"
            android:text="关注"
            android:textColor="@color/color9A"
            android:textSize="@dimen/text22"
            android:visibility="gone" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/layout_size30"
        android:layout_marginRight="@dimen/layout_size30"
        android:background="@color/commonDevide" />

</LinearLayout>