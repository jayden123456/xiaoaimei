<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/commonWhite"
    android:orientation="vertical">

    <include layout="@layout/action_bar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/commonDevide" />

    <ImageView
        android:id="@+id/iv_head"
        android:layout_width="@dimen/layout_size204"
        android:layout_height="@dimen/layout_size204"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/layout_size52"
        android:scaleType="fitXY"
        android:src="@mipmap/icon_no_head" />

    <TextView
        android:id="@+id/tv_change_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/layout_size10"
        android:text="点击修改头像"
        android:textColor="@color/colorBF"
        android:textSize="@dimen/text24" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_size35"
        android:layout_marginRight="@dimen/layout_size35"
        android:layout_marginTop="@dimen/layout_size30"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_nickname"
            android:layout_width="0dp"
            android:layout_height="@dimen/layout_size84"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@null"
            android:hint="输入昵称"
            android:paddingLeft="@dimen/layout_size35"
            android:textColor="@color/color333"
            android:textColorHint="@color/colorCD"
            android:textSize="@dimen/text26" />

        <ImageView
            android:id="@+id/iv_nickname_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/layout_size35"
            android:src="@mipmap/icon_clear"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/layout_size35"
        android:layout_marginRight="@dimen/layout_size35"
        android:background="@color/commonDevide" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/layout_size20"
        android:layout_marginLeft="@dimen/layout_size35"
        android:layout_marginRight="@dimen/layout_size35"
        android:layout_marginTop="@dimen/layout_size20"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_size35"
            android:text="选择性别"
            android:textColor="@color/colorCD"
            android:textSize="@dimen/text26" />

        <RelativeLayout
            android:id="@+id/rl_sex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/cb_woman"
                android:layout_width="@dimen/layout_size50"
                android:layout_height="@dimen/layout_size50"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/layout_size50"
                android:background="@drawable/select_female"
                android:button="@null" />

            <TextView
                android:id="@+id/tv_woman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/layout_size30"
                android:layout_toRightOf="@id/cb_woman"
                android:text="女"
                android:textColor="@color/colorCD"
                android:textSize="@dimen/text26" />

            <RadioButton
                android:id="@+id/cb_man"
                android:layout_width="@dimen/layout_size50"
                android:layout_height="@dimen/layout_size50"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/layout_size120"
                android:layout_toRightOf="@id/tv_woman"
                android:background="@drawable/select_male"
                android:button="@null" />

            <TextView
                android:id="@+id/tv_man"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/layout_size30"
                android:layout_toRightOf="@id/cb_man"
                android:text="男"
                android:textColor="@color/colorCD"
                android:textSize="@dimen/text26" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/layout_size35"
        android:layout_marginRight="@dimen/layout_size35"
        android:background="@color/commonDevide" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/layout_size20"
        android:layout_marginLeft="@dimen/layout_size35"
        android:layout_marginRight="@dimen/layout_size35"
        android:layout_marginTop="@dimen/layout_size20"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_size35"
            android:text="选择城市"
            android:textColor="@color/colorCD"
            android:textSize="@dimen/text26" />

        <TextView
            android:id="@+id/tv_city"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_size50"
            android:layout_weight="1"
            android:text="请选择城市"
            android:textColor="@color/color333"
            android:textSize="@dimen/text26" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/layout_size35"
            android:src="@mipmap/icon_more"
            android:visibility="visible" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/layout_size35"
        android:layout_marginRight="@dimen/layout_size35"
        android:background="@color/commonDevide" />

    <EditText
        android:id="@+id/et_code"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_size84"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/layout_size35"
        android:layout_marginRight="@dimen/layout_size35"
        android:background="@null"
        android:hint="邀请码(选填)"
        android:inputType="number"
        android:maxLength="10"
        android:paddingLeft="@dimen/layout_size35"
        android:textColor="@color/color333"
        android:textColorHint="@color/colorCD"
        android:textSize="@dimen/text26" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/layout_size35"
        android:layout_marginRight="@dimen/layout_size35"
        android:background="@color/commonDevide" />


    <TextView
        android:id="@+id/tv_next"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_size78"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/layout_size35"
        android:layout_marginRight="@dimen/layout_size35"
        android:layout_marginTop="@dimen/layout_size100"
        android:background="@drawable/common_unclick_login_button"
        android:gravity="center"
        android:text="@string/next"
        android:textColor="@color/commonWhite"
        android:textSize="@dimen/text28" />

</LinearLayout>