<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/commonWhite"
    android:orientation="vertical">

    <include layout="@layout/action_bar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/commonDevide" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/layout_size290"
            android:gravity="center"
            android:text="如果想要通过官方认证\n需要上传认证语音和认证视频"
            android:textColor="@color/color9A"
            android:textSize="@dimen/text28"
            android:visibility="gone" />


        <LinearLayout
            android:id="@+id/ll_voice"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_size110"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/layout_size30"
                android:layout_weight="1"
                android:text="已上传"
                android:textColor="@color/color9A"
                android:textSize="@dimen/text28" />

            <ImageView
                android:id="@+id/iv_play_voice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/layout_size35"
                android:src="@mipmap/icon_voice" />

            <TextView
                android:id="@+id/tv_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/layout_size30"
                android:text="00s"
                android:textColor="@color/commonRed"
                android:textSize="@dimen/text32" />

        </LinearLayout>

        <View
            android:id="@+id/view_voice"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/layout_size30"
            android:layout_marginRight="@dimen/layout_size30"
            android:background="@color/commonDevide" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_size98"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/commonDevide" />

        <TextView
            android:id="@+id/tv_record"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_size60"
            android:layout_marginLeft="@dimen/layout_size30"
            android:layout_marginRight="@dimen/layout_size30"
            android:layout_marginTop="@dimen/layout_size18"
            android:background="@drawable/common_red_button"
            android:gravity="center"
            android:text="按住录音(10-60s)"
            android:textColor="@color/commonWhite"
            android:textSize="@dimen/text28" />

    </LinearLayout>

</LinearLayout>