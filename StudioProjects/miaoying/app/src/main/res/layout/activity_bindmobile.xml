<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/commonWhite"
    android:orientation="vertical">

    <include layout="@layout/action_bar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/commonDevide" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_size35"
        android:layout_marginTop="@dimen/layout_size30"
        android:text="为了您账号的安全，请绑定电话号码"
        android:textColor="@color/color9A"
        android:textSize="@dimen/text22" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_size84"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/layout_size35"
        android:layout_marginRight="@dimen/layout_size35"
        android:layout_marginTop="@dimen/layout_size40"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_mobile"
            android:layout_width="0dp"
            android:layout_height="@dimen/layout_size84"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请填写手机号"
            android:inputType="phone"
            android:maxLength="11"
            android:paddingLeft="@dimen/layout_size35"
            android:textColor="@color/color333"
            android:textColorHint="@color/colorCD"
            android:textSize="@dimen/text26" />

        <ImageView
            android:id="@+id/iv_mobile_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/layout_size35"
            android:src="@mipmap/icon_clear"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/layout_size35"
        android:layout_marginRight="@dimen/layout_size35"
        android:background="@color/commonDevide" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/layout_size35"
        android:layout_marginRight="@dimen/layout_size35"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_verify_code"
            android:layout_width="0dp"
            android:layout_height="@dimen/layout_size84"
            android:layout_weight="1"
            android:background="@null"
            android:hint="验证码"
            android:inputType="phone"
            android:maxLength="6"
            android:paddingLeft="@dimen/layout_size35"
            android:textColor="@color/color333"
            android:textColorHint="@color/colorCD"
            android:textSize="@dimen/text26" />

        <ImageView
            android:id="@+id/iv_code_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/layout_size40"
            android:src="@mipmap/icon_clear"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_send_verify_code"
            android:layout_width="@dimen/layout_size180"
            android:layout_height="@dimen/layout_size44"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/layout_size35"
            android:background="@drawable/common_unclick_button"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onClick"
            android:text="@string/get_code"
            android:textColor="@color/commonWhite"
            android:textSize="@dimen/text26" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/layout_size35"
        android:layout_marginRight="@dimen/layout_size35"
        android:background="@color/commonDevide" />

    <TextView
        android:id="@+id/tv_bind"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_size78"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/layout_size35"
        android:layout_marginRight="@dimen/layout_size35"
        android:layout_marginTop="@dimen/layout_size80"
        android:background="@drawable/common_unclick_login_button"
        android:gravity="center"
        android:text="@string/bindmobile"
        android:textColor="@color/commonWhite"
        android:textSize="@dimen/text28" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_size30"
        android:layout_marginLeft="@dimen/layout_size35"
        android:text="绑定电话可以增加您账号的安全性"
        android:drawablePadding="@dimen/layout_size10"
        android:drawableLeft="@mipmap/icon_prompt"
        android:textColor="@color/color9A"
        android:textSize="@dimen/text22"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_size35"
        android:layout_marginTop="@dimen/layout_size15"
        android:drawableLeft="@mipmap/icon_prompt"
        android:drawablePadding="@dimen/layout_size10"
        android:text="绑定电话可以通过电话号码直接登录账号"
        android:textColor="@color/color9A"
        android:textSize="@dimen/text22" />

</LinearLayout>