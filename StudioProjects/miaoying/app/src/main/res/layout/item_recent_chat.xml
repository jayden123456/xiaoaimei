<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/commonWhite"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_size140"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="@dimen/layout_size110"
            android:layout_height="@dimen/layout_size110"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/layout_size30">

            <ImageView
                android:id="@+id/iv_item_head"
                android:layout_width="@dimen/layout_size100"
                android:layout_height="@dimen/layout_size100"
                android:layout_centerInParent="true"
                android:scaleType="fitXY" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/layout_size20"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="名字"
                android:textColor="@color/color333"
                android:textSize="@dimen/text32" />

            <TextView
                android:id="@+id/tv_item_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_size15"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="contentcontentcontent"
                android:textColor="@color/color56"
                android:textSize="@dimen/text28" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/layout_size20"
            android:layout_marginRight="@dimen/layout_size30"
            android:text="5分钟前"
            android:textColor="@color/color9A"
            android:textSize="@dimen/text22" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/layout_size30"
        android:layout_marginRight="@dimen/layout_size30"
        android:background="@color/commonDevide" />

</LinearLayout>