<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/layout_size510"
    android:layout_height="@dimen/layout_size440"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="@dimen/layout_size510"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_dialog_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/layout_size10"
            android:src="@mipmap/dialog_close_top" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="@dimen/layout_size480"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_common_dialog"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_size98">

            <TextView
                android:id="@+id/tv_dialog_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawablePadding="@dimen/layout_size18"
                android:gravity="center"
                android:text="提示"
                android:textColor="@color/color333"
                android:textSize="@dimen/text28" />

        </RelativeLayout>


        <View
            android:layout_width="@dimen/layout_size480"
            android:layout_height="1px"
            android:background="@color/commonDevide" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_dialog_content"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/layout_size70"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/layout_size60"
                android:layout_marginRight="@dimen/layout_size60"
                android:gravity="center"
                android:text="是否付费观看此视频？"
                android:textColor="@color/color56"
                android:textSize="@dimen/text26" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_dialog_one_ok"
            android:layout_width="@dimen/layout_size342"
            android:layout_height="@dimen/layout_size70"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/layout_size40"
            android:layout_marginTop="@dimen/layout_size20"
            android:background="@drawable/common_red_button"
            android:gravity="center"
            android:text="是"
            android:textColor="@color/commonWhite"
            android:textSize="@dimen/text30"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/ll_two_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/layout_size40"
            android:layout_marginTop="@dimen/layout_size20"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_dialog_cancel"
                android:layout_width="0dp"
                android:layout_height="@dimen/layout_size70"
                android:layout_marginLeft="@dimen/layout_size40"
                android:layout_marginRight="@dimen/layout_size5"
                android:layout_weight="1"
                android:background="@drawable/common_cancel_button"
                android:gravity="center"
                android:text="否"
                android:textColor="@color/commonWhite"
                android:textSize="@dimen/text30" />

            <TextView
                android:id="@+id/tv_dialog_ok"
                android:layout_width="0dp"
                android:layout_height="@dimen/layout_size70"
                android:layout_marginLeft="@dimen/layout_size5"
                android:layout_marginRight="@dimen/layout_size40"
                android:layout_weight="1"
                android:background="@drawable/common_red_button"
                android:gravity="center"
                android:text="是"
                android:textColor="@color/commonWhite"
                android:textSize="@dimen/text30" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>