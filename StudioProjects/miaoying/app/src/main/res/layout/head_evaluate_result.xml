<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_size180"
        android:background="@color/commonWhite">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_evaluate_suc" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_size20"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="评价成功!"
                    android:textColor="@color/color333"
                    android:textSize="@dimen/text30" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_size10"
                    android:text="您的评价将是用户前进的动力！"
                    android:textColor="@color/color9A"
                    android:textSize="@dimen/text24" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_size60"
        android:layout_marginBottom="@dimen/layout_size20"
        android:layout_marginTop="@dimen/layout_size20"
        android:background="@color/commonWhite"
        android:gravity="center"
        android:text="更多推荐"
        android:textColor="@color/color56"
        android:textSize="@dimen/text24" />

</LinearLayout>