<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/commonWhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.yidan.xiaoaimei.ui.view.RoundAngleImageView
                android:id="@+id/iv_item_head"
                android:layout_width="@dimen/layout_size100"
                android:layout_height="@dimen/layout_size100"
                android:layout_marginLeft="@dimen/layout_size15"
                android:layout_marginTop="@dimen/layout_size15" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_size12"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/layout_size40"
                        android:layout_marginTop="@dimen/layout_size20"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_item_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="name"
                            android:textColor="@color/color333"
                            android:textSize="@dimen/text28" />

                        <TextView
                            android:id="@+id/tv_item_age"
                            android:layout_width="@dimen/layout_size64"
                            android:layout_height="@dimen/layout_size32"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/layout_size12"
                            android:background="@drawable/bg_tag_selected"
                            android:gravity="center"
                            android:text="♀ 21"
                            android:textColor="@color/commonWhite"
                            android:textSize="@dimen/text22" />

                        <ImageView
                            android:id="@+id/iv_item_verify"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/layout_size32"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/layout_size12"
                            android:scaleType="fitXY"
                            android:src="@mipmap/icon_home_verify" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/iv_item_more"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/layout_size40"
                        android:layout_marginRight="@dimen/layout_size30"
                        android:layout_marginTop="@dimen/layout_size20"
                        android:scaleType="center"
                        android:src="@mipmap/icon_home_more" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_size12"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/layout_size32"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_item_voice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:src="@mipmap/icon_find_voice" />

                        <ImageView
                            android:id="@+id/iv_item_video"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/layout_size12"
                            android:src="@mipmap/icon_find_video" />

                        <TextView
                            android:id="@+id/tv_get"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/layout_size32"
                            android:layout_marginLeft="@dimen/layout_size12"
                            android:background="@drawable/bg_mine_money_get"
                            android:drawableLeft="@mipmap/icon_money_get"
                            android:drawablePadding="@dimen/layout_size10"
                            android:gravity="center"
                            android:paddingRight="@dimen/layout_size10"
                            android:text="222"
                            android:textColor="@color/mine_money_get"
                            android:textSize="@dimen/text20" />

                        <TextView
                            android:id="@+id/tv_pay"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/layout_size32"
                            android:layout_marginLeft="@dimen/layout_size12"
                            android:background="@drawable/bg_mine_money_pay"
                            android:drawableLeft="@mipmap/icon_money_pay"
                            android:drawablePadding="@dimen/layout_size10"
                            android:gravity="center"
                            android:paddingRight="@dimen/layout_size10"
                            android:text="222"
                            android:textColor="@color/mine_money_pay"
                            android:textSize="@dimen/text20" />


                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_item_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/layout_size30"
                        android:text="5分钟"
                        android:textColor="@color/color9A"
                        android:textSize="@dimen/text22" />


                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/layout_size12"
                    android:layout_marginRight="@dimen/layout_size30"
                    android:layout_marginTop="@dimen/layout_size12"
                    android:background="@color/commonDevide" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_item_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_size30"
            android:layout_marginRight="@dimen/layout_size30"
            android:layout_marginTop="@dimen/layout_size20"
            android:ellipsize="end"
            android:lineSpacingExtra="@dimen/layout_size8"
            android:maxLines="3"
            android:text="内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容"
            android:textColor="@color/color333"
            android:textSize="@dimen/text28" />

        <ImageView
            android:id="@+id/iv_item_oneimage"
            android:layout_width="@dimen/layout_size440"
            android:layout_height="@dimen/layout_size750"
            android:layout_marginLeft="@dimen/layout_size30"
            android:layout_marginTop="@dimen/layout_size20"
            android:scaleType="fitXY"
            android:visibility="gone" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_images"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_size22"
            android:layout_marginRight="@dimen/layout_size22"
            android:layout_marginTop="@dimen/layout_size20"
            android:visibility="gone"></android.support.v7.widget.RecyclerView>

        <RelativeLayout
            android:id="@+id/rl_item_voice"
            android:layout_width="@dimen/layout_size342"
            android:layout_height="@dimen/layout_size80"
            android:layout_marginBottom="@dimen/layout_size30"
            android:layout_marginLeft="@dimen/layout_size30"
            android:layout_marginTop="@dimen/layout_size26"
            android:background="@drawable/bg_find_voice">

            <ImageView
                android:id="@+id/iv_voice_animation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/layout_size30"
                android:src="@drawable/voice_animation" />

            <TextView
                android:id="@+id/tv_item_content_voice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/layout_size30"
                android:background="@drawable/bg_find_voice"
                android:text="22s"
                android:textColor="@color/commonWhite"
                android:textSize="@dimen/text28"
                android:visibility="visible" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_item_video"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_size342"
            android:layout_marginLeft="@dimen/layout_size30"
            android:layout_marginRight="@dimen/layout_size30"
            android:layout_marginTop="@dimen/layout_size26"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_item_firstimage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/icon_find_content_video" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_item_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_size30"
            android:layout_marginTop="@dimen/layout_size20"
            android:drawableLeft="@mipmap/icon_find_location"
            android:drawablePadding="@dimen/layout_size20"
            android:text="杭州"
            android:textColor="@color/find_location"
            android:textSize="@dimen/text24" />

        <TextView
            android:id="@+id/tv_item_topic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_size30"
            android:layout_marginTop="@dimen/layout_size20"
            android:text="#话题#"
            android:textColor="@color/commonRed"
            android:textSize="@dimen/text26" />

        <LinearLayout
            android:id="@+id/ll_pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_size26"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_item_pay_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/layout_size30"
                android:text="已付费观看人数：11人"
                android:textColor="@color/mine_money_pay"
                android:textSize="@dimen/text26" />

            <TextView
                android:id="@+id/tv_item_pay"
                android:layout_width="@dimen/layout_size180"
                android:layout_height="@dimen/layout_size64"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/layout_size30"
                android:background="@drawable/bg_tag_selected"
                android:gravity="center"
                android:text="100金币"
                android:textColor="@color/commonWhite"
                android:textSize="@dimen/text28"
                android:visibility="gone" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_size50"
            android:layout_marginBottom="@dimen/layout_size30"
            android:layout_marginLeft="@dimen/layout_size30"
            android:layout_marginRight="@dimen/layout_size30"
            android:layout_marginTop="@dimen/layout_size20"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_item_zan"
                android:layout_width="@dimen/layout_size114"
                android:layout_height="@dimen/layout_size50"
                android:background="@drawable/bg_zan"
                android:drawableLeft="@mipmap/icon_zan"
                android:drawablePadding="@dimen/layout_size8"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/layout_size20"
                android:text="赞"
                android:textColor="@color/colorBF"
                android:textSize="@dimen/text24" />

            <LinearLayout
                android:id="@+id/ll_zans"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"></LinearLayout>

            <TextView
                android:id="@+id/tv_zan_num"
                android:layout_width="@dimen/layout_size94"
                android:layout_height="@dimen/layout_size50"
                android:background="@drawable/bg_zan"
                android:gravity="center"
                android:text="1000"
                android:textColor="@color/colorBF"
                android:textSize="@dimen/text24" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_item_comment_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_size30"
            android:text="全部2000条评论"
            android:textColor="@color/colorCD"
            android:textSize="@dimen/text22" />

        <TextView
            android:id="@+id/tv_item_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_size30"
            android:layout_marginRight="@dimen/layout_size30"
            android:layout_marginTop="@dimen/layout_size20"
            android:lineSpacingExtra="@dimen/layout_size20"
            android:textColor="@color/color56"
            android:textSize="@dimen/text24" />

        <TextView
            android:id="@+id/tv_to_say"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_size30"
            android:layout_marginTop="@dimen/layout_size30"
            android:text="说点什么"
            android:textColor="@color/colorCD"
            android:textSize="@dimen/text28" />

        <View
            android:id="@+id/view_bottom"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginBottom="@dimen/layout_size15"
            android:layout_marginLeft="@dimen/layout_size30"
            android:layout_marginRight="@dimen/layout_size30"
            android:layout_marginTop="@dimen/layout_size10"
            android:background="@color/colorEF" />
    </LinearLayout>
</RelativeLayout>