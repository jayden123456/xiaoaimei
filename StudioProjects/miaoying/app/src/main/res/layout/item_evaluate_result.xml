<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/commonWhite"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_item_head"
        android:layout_width="@dimen/layout_size290"
        android:layout_height="@dimen/layout_size290"
        android:scaleType="fitXY" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/layout_size15"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_size15"
                android:layout_marginTop="@dimen/layout_size15"
                android:text="name"
                android:textColor="@color/color333"
                android:textSize="@dimen/text28" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/layout_size40"
                android:layout_marginTop="@dimen/layout_size5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_item_age"
                    android:layout_width="@dimen/layout_size64"
                    android:layout_height="@dimen/layout_size32"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/layout_size15"
                    android:background="@drawable/bg_tag_selected"
                    android:gravity="center"
                    android:text="♀ 21"
                    android:textColor="@color/commonWhite"
                    android:textSize="@dimen/text22" />

                <ImageView
                    android:id="@+id/iv_item_verify"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/layout_size32"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/layout_size10"
                    android:scaleType="fitXY"
                    android:src="@mipmap/icon_home_verify" />


            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/layout_size12"
            android:layout_marginTop="@dimen/layout_size12" />

        <TextView
            android:id="@+id/tv_item_attention"
            android:layout_width="@dimen/layout_size70"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_size15"
            android:layout_marginRight="@dimen/layout_size15"
            android:layout_marginTop="@dimen/layout_size15"
            android:drawablePadding="@dimen/layout_size5"
            android:drawableTop="@mipmap/icon_home_attention"
            android:gravity="center"
            android:text="关注"
            android:textColor="@color/color9A"
            android:textSize="@dimen/text22" />

    </LinearLayout>
</LinearLayout>