<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/layout_size477">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_size419"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:src="@mipmap/bg_mine_top" />

    <TextView
        android:id="@+id/tv_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/layout_size37"
        android:layout_marginTop="@dimen/layout_size62"
        android:drawablePadding="@dimen/layout_size10"
        android:drawableTop="@mipmap/icon_mine_share"
        android:text="分享主页"
        android:textColor="@color/colorEF"
        android:textSize="@dimen/text20" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_size138"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_head"
            android:layout_width="@dimen/layout_size144"
            android:layout_height="@dimen/layout_size144"
            android:layout_marginLeft="@dimen/layout_size30"
            android:background="@drawable/bg_head">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civ_head"
                android:layout_width="@dimen/layout_size140"
                android:layout_height="@dimen/layout_size140"
                android:layout_centerInParent="true" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_size20"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="小爱爱"
                    android:textColor="@color/colorEF"
                    android:textSize="@dimen/text32" />

                <TextView
                    android:id="@+id/tv_age"
                    android:layout_width="@dimen/layout_size62"
                    android:layout_height="@dimen/layout_size32"
                    android:layout_marginLeft="@dimen/layout_size12"
                    android:background="@drawable/bg_tag_selected"
                    android:gravity="center"
                    android:text="♀ 21"
                    android:textColor="@color/colorEF"
                    android:textSize="@dimen/text20" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_size20"
                android:layout_marginTop="@dimen/layout_size20"
                android:text="ID:"
                android:textColor="@color/colorEF"
                android:textSize="@dimen/text26" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_size20"
                android:layout_marginTop="@dimen/layout_size20"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_get"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/layout_size32"
                    android:background="@drawable/bg_mine_money_get"
                    android:drawableLeft="@mipmap/icon_money_get"
                    android:drawablePadding="@dimen/layout_size10"
                    android:gravity="center"
                    android:paddingRight="@dimen/layout_size10"
                    android:text=""
                    android:textColor="@color/mine_money_get"
                    android:textSize="@dimen/text20" />

                <TextView
                    android:id="@+id/tv_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/layout_size32"
                    android:layout_marginLeft="@dimen/layout_size20"
                    android:background="@drawable/bg_mine_money_pay"
                    android:drawableLeft="@mipmap/icon_money_pay"
                    android:drawablePadding="@dimen/layout_size10"
                    android:gravity="center"
                    android:paddingRight="@dimen/layout_size10"
                    android:text=""
                    android:textColor="@color/mine_money_pay"
                    android:textSize="@dimen/text20" />

                <TextView
                    android:id="@+id/tv_left"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/layout_size32"
                    android:layout_marginLeft="@dimen/layout_size20"
                    android:background="@drawable/bg_mine_money_left"
                    android:drawableLeft="@mipmap/icon_money_left"
                    android:drawablePadding="@dimen/layout_size10"
                    android:gravity="center"
                    android:paddingRight="@dimen/layout_size10"
                    android:text=""
                    android:textColor="@color/mine_money_left"
                    android:textSize="@dimen/text20" />


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_size120"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/layout_size15"
        android:layout_marginRight="@dimen/layout_size15"
        android:background="@drawable/bg_common_card"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_attention"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/ripple_effect"
            android:drawablePadding="@dimen/layout_size15"
            android:drawableTop="@mipmap/icon_mine_attention"
            android:gravity="center"
            android:text="关注：1000"
            android:textColor="@color/color9A"
            android:textSize="@dimen/text24" />

        <TextView
            android:id="@+id/tv_fans"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/ripple_effect"
            android:drawablePadding="@dimen/layout_size15"
            android:drawableTop="@mipmap/icon_mine_fans"
            android:gravity="center"
            android:text="粉丝：1000"
            android:textColor="@color/color9A"
            android:textSize="@dimen/text24" />

        <TextView
            android:id="@+id/tv_visitor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/ripple_effect"
            android:drawablePadding="@dimen/layout_size15"
            android:drawableTop="@mipmap/icon_mine_visitor"
            android:gravity="center"
            android:text="访客"
            android:textColor="@color/color9A"
            android:textSize="@dimen/text24" />

    </LinearLayout>

</RelativeLayout>