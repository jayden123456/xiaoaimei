<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/commonBg"
    android:orientation="vertical">

    <View
        android:id="@+id/view_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_size30"
        android:background="@color/commonWhite" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_size78"
        android:background="@color/commonWhite">

        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/layout_size30"
            android:src="@drawable/icon_search" />

        <ImageView
            android:id="@+id/iv_screen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/layout_size30"
            android:src="@drawable/icon_screen" />

        <RelativeLayout
            android:layout_width="@dimen/layout_size456"
            android:layout_height="@dimen/layout_size50"
            android:layout_centerInParent="true"
            android:background="@drawable/bg_home_tablayout">

            <android.support.design.widget.TabLayout
                android:id="@+id/tablayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_size37"
                android:layout_centerInParent="true"
                app:tabGravity="center"
                app:tabIndicatorHeight="0dp"
                app:tabMaxWidth="@dimen/layout_size114"
                app:tabMode="scrollable"
                app:tabPaddingEnd="@dimen/layout_size5"
                app:tabPaddingStart="@dimen/layout_size5">

            </android.support.design.widget.TabLayout>

        </RelativeLayout>

    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>

</LinearLayout>