<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/commonWhite"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/layout_size30"
        android:layout_marginRight="@dimen/layout_size30"
        android:background="@color/commonDevide" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_size130"
        android:orientation="horizontal">

        <com.yidan.xiaoaimei.ui.view.RoundAngleImageView
            android:id="@+id/iv_item_head"
            android:layout_width="@dimen/layout_size80"
            android:layout_height="@dimen/layout_size80"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/layout_size30" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_size30"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_item_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/layout_size20"
                    android:layout_weight="1"
                    android:text="name"
                    android:textColor="@color/color9A"
                    android:textSize="@dimen/text24" />

                <TextView
                    android:id="@+id/tv_item_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/layout_size32"
                    android:text="time"
                    android:textColor="@color/color9A"
                    android:textSize="@dimen/text20" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_item_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_size20"
                android:layout_marginTop="@dimen/layout_size15"
                android:text="content"
                android:textColor="@color/color56"
                android:textSize="@dimen/text24" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>